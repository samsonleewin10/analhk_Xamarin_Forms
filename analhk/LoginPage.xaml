<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="analhk.LoginPage">
	<ContentPage.Content>
		<StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" >
			<Label Text="Task Master" TextColor="Teal" FontSize="30" Margin="0,0,0,30" HorizontalOptions="Center"/>
			<Label Text="Username:" />
			<Entry x:Name="nameInput" Placeholder="Input Your Username here" />
			<Label Text="Password:" />
			<Entry x:Name="pwdInput" Placeholder="Input Your Password here" IsPassword="true" />
			<Button x:Name="LoginBtn" Text="Login" BackgroundColor="Teal" TextColor="White" Margin="0,15" />
			<Button x:Name="HelpBtn" Text="I need help" Margin="0,15" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
